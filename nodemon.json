{
    "restartable": "rs",
    "ignore": [
        ".git",
        ".svn",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "watch": [
        "routers/*",
        "views/*"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js ejs json"
}